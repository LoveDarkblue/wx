<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/titie_bar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_15"
        android:text=" 卡介苗（BCG）"
        android:textColor="@color/mBlack"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="230dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="6dp"
        android:background="@drawable/yimiaojiezhong_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                style="@style/vaccine_info"
                android:text="一类疫苗" />

            <TextView
                style="@style/vaccine_info"
                android:text="共一剂" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                style="@style/vaccine_info"
                android:text="免费" />

            <TextView
                style="@style/vaccine_info"
                android:text="必打" />
        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/line_1"
        android:layout_marginTop="20dp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_50" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:text="@string/yimiaoxinxi_text1"
            android:textColor="@color/mBlack" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="2015-01-01"
            android:textColor="@color/mine_item_wordcolor" />

        <ImageView
            android:id="@+id/vaccine_info_iv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:src="@drawable/xinxi_arrow" />

        <TextView
            android:id="@+id/vaccine_info_tv_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@id/vaccine_info_iv_arrow"
            android:text="星期五"
            android:textColor="@color/mine_item_wordcolor" />
    </RelativeLayout>

    <View style="@style/line_1" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_50" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:text="@string/yimiaoxinxi_text1"
            android:textColor="@color/mBlack" />

        <TextView
            android:id="@+id/vaccine_info_hospital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="滨江社区医院"
            android:textColor="@color/mine_item_wordcolor" />

        <ImageView
            android:id="@+id/vaccine_info_iv_arrow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:src="@drawable/xinxi_arrow" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="2dp"
            android:layout_toLeftOf="@id/vaccine_info_iv_arrow1"
            android:src="@drawable/tianjia_del" />
    </RelativeLayout>

    <View style="@style/line_1" />

</LinearLayout>