<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1.0"
        android:background="#ffffff" />

    <RadioGroup
        android:id="@+id/main_radio"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rb_vaccinetable"
            style="@style/main_tab_bottom"
            android:background="@drawable/main_tab_vaccinetable" />

        <RadioButton
            android:id="@+id/rb_finddoctor"
            style="@style/main_tab_bottom"
            android:background="@drawable/main_tab_finddoctor" />

        <RadioButton
            android:id="@+id/rb_knowledge"
            style="@style/main_tab_bottom"
            android:background="@drawable/main_tab_knowledge" />

        <RadioButton
            android:id="@+id/rb_my"
            style="@style/main_tab_bottom"
            android:background="@drawable/main_tab_my" />
    </RadioGroup>

</LinearLayout>